{
  "name": "lib-upng",
  "version": "2.0.1",
  "description": "UPNG.js",
  "keywords": [
    "UPNG",
    "UPNG.js",
    "cjs",
    "umd",
    "esm"
  ],
  "homepage": "https://github.com/fisker/lib-upng#readme",
  "bugs": {
    "url": "https://github.com/fisker/lib-upng/issues"
  },
  "repository": "fisker/lib-upng",
  "funding": "https://github.com/fisker/lib-upng?sponsor=1",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "sideEffects": false,
  "main": "dist/index.common.js",
  "jsdelivr": "dist/index.js",
  "unpkg": "dist/index.js",
  "module": "dist/index.mjs",
  "browser": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/{node_modules,UPNG.js}/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s lint build format test dist",
    "test": "ava",
    "test-coverage": "nyc yarn test"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "babel": true,
    "require": [
      "esm"
    ],
    "verbose": true
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "pako": "1.0.11"
  },
  "devDependencies": {
    "@ava/babel": "1.0.1",
    "@commitlint/cli": "11.0.0",
    "@fisker/commitlint-config": "1.3.1",
    "@fisker/eslint-config": "3.1.2",
    "@fisker/eslint-config-ava": "2.0.1",
    "@fisker/husky-config": "3.1.1",
    "@fisker/lint-staged-config": "2.2.0",
    "@fisker/prettier-config": "3.1.1",
    "ava": "3.12.1",
    "cz-conventional-changelog": "3.3.0",
    "del-cli": "3.0.1",
    "eslint": "7.9.0",
    "esm": "3.2.25",
    "husky": "4.3.0",
    "is-png": "2.0.0",
    "lint-staged": "10.3.0",
    "markdownlint-cli": "0.23.2",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.1.1",
    "rollup": "2.26.11",
    "sort-package-json": "1.44.0",
    "stylelint": "13.7.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
